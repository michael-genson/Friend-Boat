{
  "explorer.fileNesting.enabled": true,
  "python.analysis.extraPaths": [
    "friend_boat"
  ],
  "explorer.fileNesting.patterns": {
    "package.json": "package-lock.json, yarn.lock, .eslintrc.js, tsconfig.json, .prettierrc, .editorconfig",
    "pyproject.toml": "poetry.lock, alembic.ini, .pylintrc, .flake8, .bumpversion.cfg",
    "netlify.toml": "runtime.txt",
    "Dockerfile": "Dockerfile, .dockerignore, docker-compose.dev.yml, docker-compose.yml, docker_entry.sh",
    "README.md": "LICENSE, SECURITY.md"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
  },
  "emmet.includeLanguages": {
    "jinja-html": "html"
  },
  "python.analysis.typeCheckingMode": "off",
  "cSpell.words": [],
  "python.testing.pytestArgs": [
    "--cov=friend_boat/",
    "tests/"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true
}
